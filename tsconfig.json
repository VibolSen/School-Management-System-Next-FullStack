{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "components/nav/Header.jsx",
    "components/dashboard/AdministratorDashboard.jsx",
    "components/dashboard/DashboardCard.jsx",
    "components/dashboard/students/StudentTable.jsx",
    "components/dashboard/students/StudentManagementView.jsx",
    "app/admin/staff/page.tsx",
    "components/staff/StaffManagementView.jsx",
    "components/dashboard/students/StaffTable.jsx",
    "components/staff/AddStaffModal.jsx",
    "app/admin/students/page.jsx",
    "components/dashboard/students/AddStudentModal.jsx",
    "components/dashboard/HRDashboard.tsx",
    "components/dashboard/FacultyDashboard.jsx",
    "app/layout.jsx",
    "app/page.jsx",
    "app/admin/layout.jsx",
    "app/admin/attendance/page.jsx",
    "components/attendance/AttendanceView.jsx",
    "components/attendance/QRCodeGeneratorModal.jsx",
    "components/attendance/AttendanceTable.jsx",
    "app/admin/courses/page.jsx",
    "components/course/CourseManagementView.jsx",
    "components/course/CourseAnalyticsView.jsx",
    "components/course/CourseModal.jsx",
    "components/course/CourseTable.jsx",
    "app/admin/e-library/page.jsx",
    "components/e-library/ELibraryView.jsx",
    "components/e-library/ELibraryGrid.jsx",
    "components/e-library/ResourceDetailModal.jsx",
    "components/e-library/AddResourceModal.jsx",
    "components/ConfirmationModal.jsx",
    "app/admin/dashboard/page.jsx",
    "app/faculty/dashboard/page.jsx",
    "components/ScanView.jsx",
    "components/QRCodeScanner.jsx",
    "app/student/scan-qr/page.jsx",
    "app/student/attendance/page.jsx",
    "components/dashboard/TeacherDashboard.jsx",
    "app/teacher/assignment/page.jsx",
    "app/faculty/e-library/page.jsx",
    "app/student/e-library/page.jsx",
    "components/dashboard/StudentDashboard.jsx",
    "components/ReportsView.jsx",
    "app/hr/leave/page.jsx",
    "components/leave/LeaveManagementView.jsx",
    "app/student/assignments/page.jsx",
    "components/students/StudentPerformanceView.jsx",
    "components/SubmissionDetailView.jsx",
    "app/faculty/assignments/page.jsx",
    "app/not-found.jsx"
  ],
  "exclude": ["node_modules"]
}
